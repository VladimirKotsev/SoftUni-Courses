@using ForumApp.Models.Post;
@model ForumViewModel;

@{
    ViewData["Title"] = "All Posts";
}

<div class="text-center"><h1>@ViewBag.Title</h1></div>
<hr />
<div class="d-grid gap-2 mb-2"></div>
<div class="d-grid gap-2 mb-2">
    <a asp-controller="Post" asp-action="Add" class="btn btn-primary">Add Post</a>
</div>
@if (Model.AllPosts.Count > 0)
{
    <div class="row">
        @foreach (var viewModel in Model.AllPosts)
        {
            <div class="col-sm-6">
                <div class="card ">
                    <div class="card-body">
                        <h4 class="card-title text-center">@viewModel.PostTitle</h4>
                        <p class="card-text">@viewModel.PostDescription</p>
                        <div class="d-grid gap-2">
                            <a asp-controller="Post" asp-action="Edit" asp-route-id="@viewModel.Id" class="btn btn-warning">Edit</a>
                            <form class="mt-2" asp-controller="Post" aspaction="Delete" asp-route-id="@viewModel.Id">
                                <div class="d-grid gap-2">
                                    <input type="submit" value="Delete" class="btn btn-danger mb-2"/>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="d-grid gap-2 mb-2"></div>
    <p class="text-center fs-5">No posts yet!</p>
}